<% @page_title=@course.name+"课程管理"  -%>
  <div class="title"><%= @course.name %>课程－－通知管理</div>
  <table>
  <tr class="ListTitle">
    <th>标题</th>
    <th>创建时间</th>
    <th>最后更新</th>
    <th>阅读次数</th>
  </tr>
  
<% 
odd_or_even = 0
for notify in @notifies
odd_or_even = 1 - odd_or_even
-%>
  <tr class="ListLine<%= odd_or_even %>">
    <td><%=h notify.title %></td>
    <td><%=h notify.created_at %></td>
    <td><%=h notify.updated_at %>KB</td>
    <td><%=h notify.readed_times %></td>
    <td><%= link_to '显示', [:teacher, @course, notify] %></td>
    <td><%= link_to '修改', edit_teacher_course_notify_path(@course, notify) %></td>
	<td><%= link_to '删除', [:teacher, @course, notify], :method => :delete, :data => {:confirm => '确认要删除该通知吗?'} %></td>
  </tr>
<% end %>
</table>
<%= paginate @notifies %>
<br />

<p><%= link_to '揆写通知', new_teacher_course_notify_path(@course) %> |
<%= link_to '返回', [:teacher, @course] %></p>
