<h1>课程列表</h1>
<hr>
<table width="550">
  <tr class="ListTitle">
    <th width="200">课程名称</th>
    <th width="80">授课教师</th>
    <th width="60">学生数</th>
  </tr>

<% 
odd_or_even = 0
for course in @courses
odd_or_even = 1 - odd_or_even
-%>
  <tr class="ListLine<%= odd_or_even %>">
    <td><%=h course.name %></td>
    <td><%=h course.teacher.name %></td>
    <td align="center"><%=h course.students.size %></td>
    <td><%= link_to '显示', [:admin, course] %></td>
    <td><%= link_to '修改', edit_admin_course_path(course) %></td>
    <td><%= link_to '学生管理', students_admin_course_path(course) %>
	<td><%= link_to '删除', [:admin, course], :method => :delete, :data => {:confirm => '确认要删除该课程吗?'} %></td>
  </tr>
<% end %>
</table>
<%= paginate @courses %>
<br />

<%= link_to '添加课程', new_admin_course_path %>
