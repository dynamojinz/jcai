<h1>教学通知</h1>
<hr>
<table width="400">
  <tr class="ListTitle">
    <th width="200">标题</th>
    <th width="80">发布时间</th>
  </tr>
<% 
odd_or_even = 0
for notice in @notices 
odd_or_even = 1 - odd_or_even
-%>
  <tr class="ListLine<%= odd_or_even %>">
    <td><%=h notice.title %></td>
    <td><%=h date_string(notice.updated_at) %></td>
    <td><%= link_to '显示', [:admin, notice] %></td>
    <td><%= link_to '修改', edit_admin_notice_path(notice) %></td>
	<td><%= link_to '删除', [:admin, notice], :method => :delete, :data => {:confirm => '确认删除该通知吗?'} %></td>
  </tr>
<% end %>
</table>
<%= paginate @notices %>
<br />

<%= link_to 'New Notice', new_admin_notice_path %>
