<% @page_title= "欢迎你进入#{@course.name}课程学习" -%>
  <div class="title"><%= @course.name %>课程－－教学通知</div>
  <table>
  <tr class="ListTitle">
    <th>标题</th>
    <th>创建时间</th>
    <th>最后更新</th>
    <th>阅读次数</th>
  </tr>
  
<% 
odd_or_even = 0
for notify in @notifies
odd_or_even = 1 - odd_or_even
-%>
  <tr class="ListLine<%= odd_or_even %>">
    <td><%=h notify.title %></td>
    <td><%=h datetime_string(notify.created_at) %></td>
    <td><%=h datetime_string(notify.updated_at) %></td>
    <td><%=h notify.readed_times %></td>
    <td><%= link_to '显示', [:student, @course, notify] %></td>
  </tr>
<% end %>
</table>

<%= paginate @notifies %>
<br />

<p><%= link_to '返回', [:student, @course] %></p>
